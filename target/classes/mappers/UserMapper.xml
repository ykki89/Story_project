   		<insert id="regist">
		INSERT INTO regist (
				id,
				passwd,
				conpasswd,
				name,
				email,
				zip,
				addr,
				detail_addr,
				gender,
				birth_year,
				birth_month,
				birth_day
			) VALUES (
				#{id},
				#{passwd},
				#{conpasswd},
				#{name},
				#{email},
				#{zip},
				#{addr},
				#{detail_addr},
				#{gender},
				#{birth_year},
				#{birth_month},
				#{birth_day}
			)
		</insert>
		<select id="login" resultType="map">
			SELECT id,name
			FROM regist
			WHERE id = #{id}
			AND passwd = #{passwd} 
		</select>


